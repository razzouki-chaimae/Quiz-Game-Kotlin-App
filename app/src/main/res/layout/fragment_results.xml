<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.ResultsFragment"
    android:background="@drawable/gradient_blue_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/resultIllustrationImageView"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:src="@drawable/winning_illustration"/>

        <TextView
            android:id="@+id/playerFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Final Score : 20/20"
            android:textSize="24dp"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/resultMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You win!"
            android:textSize="24dp"
            android:layout_margin="24dp"/>

        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play again"
            android:backgroundTint="#FFFF1C"
            android:layout_margin="24dp"/>


    </LinearLayout>

</FrameLayout>